<head>
  <%= stylesheet_link_tag 'lessons', media: 'all', 'data-turbolinks-track': 'reload' %>
  <style>
@import url('https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Kolker+Brush&family=Poppins:wght@300&family=Source+Sans+Pro:wght@200&family=Xanh+Mono&display=swap');
<%= javascript_include_tag '/app/javascript/options.js' %>

</style>


</head>
<div class="nav">
  <span class="word">Contact</span>
  <span class="word">About</span>
  <span class="word">Menu</span>
</div>
  <h1 class="book"><strong>Book Now</strong></h1>



<div class="lessons-container">
    <ul id="lesson-list">
      <% @lessons.each do |lesson| %>
        <li class="lesson">
          <div class="lesson-title"><%= lesson.name %>
          <img src="https://media.istockphoto.com/id/1141790182/photo/drummer-playing-drum-set-at-concert-on-stage-music-show-bright-scene-lighting-in-club-drum.jpg?s=170667a&w=0&k=20&c=-X15_1xaoMj0-9tyJ7KRd7XdK4NQsDavNSd5rCz1fQU=" alt="drumpic">
          </div>
          <div class="lesson-content"><%= lesson.description %></div>
        </li>
      <% end %>
    </ul>

    <script>
      const lessonList = document.getElementById('lesson-list');

      lessonList.addEventListener('click', (event) => {
        if (event.target.className === 'lesson-title') {
          event.target.nextElementSibling.classList.toggle('expanded');
        }
      });
    </script>
</div>















